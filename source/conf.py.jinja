    "myst_parser",
    "sphinx_design",
    "sphinxcontrib.mermaid",
    "sphinx_copybutton",
    {% if include_autosectionlabel %}
    "sphinx.ext.autosectionlabel",
    {% endif %}
    {% if include_intersphinx %}
    "sphinx.ext.intersphinx",
    {% endif %}
]
{% if include_autosectionlabel %}
autosectionlabel_prefix_document = True
{% endif %}
templates_path = ["_templates"]
exclude_patterns = []

