project = "{{ project_name }}"
author = "{{ author_name }}"
{% if include_version %}
release = "{{ version }}"
{% endif %}
{% if include_copyright %}
copyright = "%Y, {{ author_name }}"
{% else %}
html_show_copyright = False
{% endif %}

# -- General configuration ---------------------------------------------------
# https://www.sphinx-doc.org/en/master/usage/configuration.html#general-configuration

